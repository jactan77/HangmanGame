<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<StackPane xmlns:fx="http://javafx.com/javafx"  fx:controller="com.example.hangmangame.MenuController" alignment="CENTER"  >
    <VBox alignment="CENTER" spacing="30" style="-fx-padding: 50;">
        <Label text="Welcome to Hangman Game" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-font-family: 'Roboto';"/>

        <ImageView fx:id="logoImage" fitWidth="200" fitHeight="200" preserveRatio="true"/>

        <VBox alignment="CENTER" spacing="20">
            <Button fx:id="startButton" text="Start Game" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 20; -fx-font-family: 'Roboto';"/>
            <Button fx:id="settingsButton" text="Settings" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 20; -fx-font-family: 'Roboto';"/>
            <Button fx:id="exitButton" text="Exit" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 20; -fx-font-family: 'Roboto';"/>
        </VBox>
    </VBox>
</StackPane>